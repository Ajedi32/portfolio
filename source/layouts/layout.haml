%html
  %head
    %meta{:charset => "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || "The Middleman"
    %script{src: 'vendor/webcomponentsjs/webcomponents.min.js'}
    = stylesheet_link_tag "normalize", "all"
    = stylesheet_link_tag "layout", "shim-shadowdom" => true
    = javascript_include_tag  "all", defer: true
    %link{rel: 'import', href: 'vendor/core-scroll-header-panel/core-scroll-header-panel.html'}
    %link{rel: 'import', href: 'vendor/core-toolbar/core-toolbar.html'}
    %link{rel: 'import', href: 'vendor/core-icon-button/core-icon-button.html'}
    %link{rel: 'import', href: 'vendor/paper-shadow/paper-shadow.html'}
  %body{class: page_classes}
    %core-scroll-header-panel{condenses: true}
      %core-toolbar#site-header{class: 'tall'}
        %core-icon-button{icon: 'menu'}
        .bottom.indent.title= current_page.data.title
      %main
        = yield
