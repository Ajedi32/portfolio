%html
  %head
    %meta{:charset => "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    / Use title if it's in the page YAML frontmatter
    %title= yield_content(:title) || "The Middleman"
    %script{src: '/vendor/webcomponentsjs/webcomponents.min.js'}
    = stylesheet_link_tag "normalize", "all"
    = stylesheet_link_tag "layout", "shim-shadowdom" => true
    = javascript_include_tag  "all", defer: true
    %link{rel: 'import', href: '/vendor/core-scroll-header-panel/core-scroll-header-panel.html'}
    %link{rel: 'import', href: '/vendor/core-toolbar/core-toolbar.html'}
    %link{rel: 'import', href: '/vendor/core-icon-button/core-icon-button.html'}
    %link{rel: 'import', href: '/vendor/paper-shadow/paper-shadow.html'}
    %link{rel: 'import', href: '/assets/components/experience-card.html'}
    %link{rel: 'import', href: '/vendor/paper-button/paper-button.html'}
    %link{rel: 'import', href: '/vendor/paper-menu-button/paper-menu-button.html'}
    %link{rel: 'import', href: '/vendor/paper-icon-button/paper-icon-button.html'}
    %link{rel: 'import', href: '/vendor/paper-dropdown/paper-dropdown.html'}
    %link{rel: 'import', href: '/vendor/core-menu/core-menu.html'}
    %link{rel: 'import', href: '/vendor/paper-item/paper-item.html'}
    %link{rel: 'import', href: '/vendor/paper-input/paper-input.html'}
    %link{rel: 'import', href: '/vendor/paper-radio-group/paper-radio-group.html'}
    %link{rel: 'import', href: '/vendor/paper-radio-button/paper-radio-button.html'}
    %link{rel: 'import', href: '/vendor/paper-slider/paper-slider.html'}
    = javascript_include_tag '/vendor/jquery/dist/jquery.min.js'
    = javascript_include_tag '/vendor/letteringjs/jquery.lettering.js'
    = javascript_include_tag 'crazy-lettering'
  %body{class: page_classes}
    %core-scroll-header-panel{condenses: true}
      %core-toolbar#site-header{class: 'tall'}
        %paper-menu-button
          %paper-icon-button{icon: "menu"}
          %paper-dropdown.dropdown
            %core-menu.menu
              %paper-item
                %a{href: url_for("/")} Home
              %paper-item
                %a{href: url_for("/work-experience")} Work Experience
              %paper-item
                %a{href: url_for("/education")} Education
              %paper-item
                %a{href: url_for("/demo.html")} Demonstration
        -# %core-icon-button{icon: 'menu'}
        .bottom.indent.title= yield_content(:title)
      %main
        = yield
